<% provide(:title, "Edit item") %>

<div class="container py-5" style="max-width: 540px">

    <h1>New list</h1>
    
    <%= form_with(model: @list) do |f| %>
        <%= render 'lists/error_messages' %>

        <div class="field">
            <%= f.label :description, class: "form-label" %>
            <%= f.text_field :description, class: "form-control" %>
        </div>

        <br>

        <div class="field">
            <%= f.label :completed, class: "checkbox inline" do %>
                <%= f.check_box :completed %>
                <span>Completed</span>
            <% end %>
        </div>

        <br>

        <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>
    
</div>